@model S3Train.Domain.LoaiSanPham

@{
                /**/

                ViewBag.Title = "Create";
                Layout = "~/Areas/Admin/Views/Shared/SP.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Thêm Loại Sản Phẩm</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Tên Loại", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.TextBoxFor(model => model.TenLoai, new { @class = "form-control" } )
                @Html.ValidationMessageFor(model => model.TenLoai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Phân Loại", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.DropDownListFor(model => model.MaPhanLoai, ViewBag.MaPhanLoai as SelectList, "---Chọn phân loại---", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaPhanLoai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" style="background-color:Highlight; color:white" value="Thêm mới"  />
            </div>
        </div>
    </div>

    
}

<div>
    @Html.ActionLink("Quay lại sơ đồ", "Index")
</div>
