@model S3Train.Web.Areas.Admin.Data.Login
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login </title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Content/TemplateAdmin/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/TemplateAdmin/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/TemplateAdmin/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/TemplateAdmin/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/TemplateAdmin/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/TemplateAdmin/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/TemplateAdmin/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/TemplateAdmin/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/TemplateAdmin/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/TemplateAdmin/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/TemplateAdmin/css/main.css">
    <!--===============================================================================================-->
</head>
<body>
@Html.Raw(TempData["Message"])
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
                    @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <span class="login100-form-title p-b-32">
                            ĐĂNG NHẬP
                        </span>
                        <span>
                            @Html.ValidationSummary(true, null, new { @class = "txt2" })
                        </span> 
                        <span class="txt1 p-b-11">
                            USERNAME
                        </span>
                        <div class="wrap-input100 validate-input m-b-36" name ="Email" data-validate="Username is required" novalidate>
                            @Html.TextBoxFor(model => model.TenDN, new { @class = "input100", @placeholder = "Please enter your email", @autofocus = "autofocus", @Value=ViewBag.email})
                            @*<input class="input100" type="text" name="username">*@
                            @Html.ValidationMessageFor(model => model.TenDN)
                            <span class="focus-input100"></span>
                        </div>

                        <span class="txt1 p-b-11">
                            Password
                        </span>
                        <div class="wrap-input100 validate-input m-b-12" data-validate="Password is required">
                            <span class="btn-show-pass">
                                <i class="fa fa-eye"></i>
                            </span>
                            @Html.TextBoxFor(model => model.Password, new { @class = "input100", @placeholder = "Please enter your password", @autofocus = "autofocus", @type = "password", @Value=ViewBag.password })
                            @*<input class="input100" type="password" name="pass">*@
                            @Html.ValidationMessageFor(model => model.Password)
                            <span class="focus-input100"></span>
                        </div>

                        <div class="flex-sb-m w-full p-b-48">
                            <div class="label-checkbox100">
                                @Html.CheckBoxFor(model => model.RememberMe, new { @checked = "checked" })
                                Remember me
                            </div>
                        </div>
                        <div class="flex-sb-m w-full p-b-48">
                            <button type ="submit" class="login100-form-btn">
                                Đăng nhập
                            </button>
                        </div>
                    }

                        
            </div>
        </div>
    </div>

    <div id="dropDownSelect1"></div>

    <!--===============================================================================================-->
    <script src="~/Content/TemplateAdmin/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/TemplateAdmin/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/TemplateAdmin/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Content/TemplateAdmin/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/TemplateAdmin/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/TemplateAdmin/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/Content/TemplateAdmin/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/TemplateAdmin/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/TemplateAdmin/js/main.js"></script>

</body>
</html>