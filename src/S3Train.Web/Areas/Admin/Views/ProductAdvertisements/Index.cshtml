@using PagedList;
@using PagedList.Mvc;
@model PagedList.PagedList<S3Train.Domain.ProductAdvertisement>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<h2>PRODUCT ADVERTISEMENTS</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered">
    <tr>
        <th>
            Book
        </th>
        <th>
            Title
        </th>
        <th>
            Description
        </th>
        <th>
            Event Url
        </th>
        <th>
            Image
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().AdType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().IsActive)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Product.NameProduct)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EventUrl)
        </td>
        <td>
            <img src="@Url.Content("~/ImagePD/"+item.ImagePath)" width="50" height="50" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AdType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

@*Create page link*@
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
<div class="MenuPage">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>
<style>
    .MenuPage li {
        display: inline;
    }
</style>
